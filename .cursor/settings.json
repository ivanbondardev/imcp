{
  "editor": {
    "formatOnSave": true,
    "codeActionsOnSave": {
      "source.fixAll": true,
      "source.organizeImports": true
    }
  },
  "typescript": {
    "preferences": {
      "importModuleSpecifier": "relative"
    }
  },
  "files": {
    "exclude": {
      "**/.git": true,
      "**/node_modules": true,
      "**/dist": true,
      "**/build": true,
      "**/.next": true,
      "**/.venv": true,
      "**/__pycache__": true
    }
  },
  "search": {
    "exclude": {
      "**/node_modules": true,
      "**/dist": true,
      "**/build": true,
      "**/.next": true,
      "**/coverage": true
    }
  }
}
